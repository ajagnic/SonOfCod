@{
    ViewData["Title"] = "AdminLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using SonOfCod.ViewModels
@model LoginViewModel

@if (User.Identity.IsAuthenticated)
{
    @using (Html.BeginForm("LogOff", "Marketing"))
    {
        <input type="submit" value="Log out" class="btn btn-default" />

    }
}
else
{
    <h2>Login</h2>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.LabelFor(m => m.Email)
        <br />
        @Html.TextBoxFor(m => m.Email)
        <br />
        <br />
        @Html.LabelFor(m => m.Password)
        <br />
        @Html.TextBoxFor(m => m.Password)
        <br />
        <br />
        <input type="submit" value="Log In" class="btn btn-default" />
    }
    <hr />
    <a asp-controller="Marketing" asp-action="AdminRegister">Register New Admin</a>
}